$(document).ready ->
  $('#boton').click ->
    $('.content').animate
      marginTop: "-20%"
    $('#bg').css 'background','url("'+bg()+'")'
    $('#boton').css 'display','none'
    show '#phrase'
    show '#author'
    show '#feed'
    return
  return

show = (p1) ->
  $(p1).removeClass 'hidden'
  $(p1).addClass 'show'
  $(p1).addClass 'animated bounce'
  return
bg = ->
  info = [
    <% Bg.all.each do |bg| %>
	    '<%= bg.url %>'
    <% end %>
  ]
  info[Math.floor(Math.random() * info.length )]
