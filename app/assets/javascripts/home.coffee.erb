$(document).ready ->
  $('#boton').click ->
    $('.content').animate
      marginTop: "-20%"
    $('#boton').css 'display','none'
    show '#phrase'
    show '#author'
    show '#feed'
    return
  return
show = (p1) ->
  $(p1).removeClass 'hidden'
  $(p1).addClass 'show'
  $(p1).addClass 'animated bounce'
  return

