=link_to 'Configuracíon', configuration_index_path
.center.animated.bounceInUp
  .content
    %h1¡Hola Milhy ❤️!
    %p
      = @greeting
    %button#boton.btn.btn-default 👋🏼 Hola Botón
    .box
      %h1#phrase.hidden
        = @phrase
      %h3#author.hidden
        = @author
#feed.container-fluid.hidden.feedBG
  .row
    .col-xs-1
    .col-xs-2.entriesBG
      %h3 Feeds
      .list-group.entriesBG
        - @feed.each do |f|
          = link_to f.name, home_show_path(id:f.id), remote: true, class: "list-group-item"
    .col-xs-8.entriesBG
      %h3 Entradas
      #entries
